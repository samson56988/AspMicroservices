#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["Discount/DiscountService/DiscountService/DiscountService.csproj", "Discount/DiscountService/DiscountService/"]
RUN dotnet restore "Discount/DiscountService/DiscountService/DiscountService.csproj"
COPY . .
WORKDIR "/src/Discount/DiscountService/DiscountService"
RUN dotnet build "DiscountService.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DiscountService.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DiscountService.dll"]